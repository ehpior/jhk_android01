<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Notice -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/titlebg"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonclose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/titlebg"
            android:scaleType="fitXY"
            android:src="@drawable/icon_cancel"
            android:padding="10dp"
            />

        <ImageButton
            android:id="@+id/buttondelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/titlebg"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_delete"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="New Diary"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/buttontmp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/titlebg"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_delete"
            android:visibility="invisible"
            android:padding="10dp"
            />

        <ImageButton
            android:id="@+id/buttonSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/titlebg"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:src="@drawable/icon_save"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/diary_tmp_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/black_jump"
                android:padding="33dp"
                android:src="@drawable/plus" />

            <ImageView
                android:id="@+id/diary_tmp_image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/black_jump"
                android:padding="33dp"
                android:src="@drawable/plus" />

            <ImageView
                android:id="@+id/diary_tmp_image3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/black_jump"
                android:padding="33dp"
                android:src="@drawable/plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/diary_et_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="Title"
                    android:minLines="2"
                    android:paddingLeft="20dp"
                    android:textSize="20dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/icon_date"
                        android:padding="5dp"
                        android:layout_marginRight="10dp"
                        />
                    <EditText
                        android:id="@+id/diary_et_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:hint="Date" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/make_diary_weather"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:src="@drawable/weather_1" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/make_diary_face"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:padding="1dp"
                    android:src="@drawable/icon_face_2"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>





        <EditText
            android:id="@+id/diary_et_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@drawable/black"
            android:paddingTop="15dp"
            android:gravity="top|start"
            android:ems="10"
            android:hint="Content"
            android:textSize="20dp"
            android:paddingLeft="30dp"
            android:minLines="10"
            android:layout_marginBottom="10dp" />
        <EditText
            android:id="@+id/diary_et_summary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="Summary"
            android:textSize="20dp"
            android:paddingLeft="30dp"
            android:minLines="2"
            android:layout_marginBottom="30dp" />


    </LinearLayout>
    <!-- Notice -->

    <!-- 닫기 버튼 -->

    <!--// 닫기 버튼 -->
</LinearLayout>