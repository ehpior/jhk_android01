<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Notice -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/titlebg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="New Diary"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:background="@drawable/black"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_date" />

            <EditText
                android:id="@+id/diary_et_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/diary_tmp_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:padding="33dp"
                android:background="@drawable/black_jump"
                android:src="@drawable/plus"
                />
            <ImageView
                android:id="@+id/diary_tmp_image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/black_jump"
                android:padding="33dp"
                android:src="@drawable/plus" />
            <ImageView
                android:id="@+id/diary_tmp_image3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/black_jump"
                android:padding="33dp"
                android:src="@drawable/plus" />
        </LinearLayout>

        <EditText
            android:id="@+id/diary_et_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/black"
            android:ems="10"
            android:hint="Title"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:minLines="2"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/diary_et_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@drawable/black"
            android:ems="10"
            android:hint="Content"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:minLines="10"
            android:layout_marginBottom="10dp" />
        <EditText
            android:id="@+id/diary_et_summary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/black"
            android:ems="10"
            android:hint="Summary"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:minLines="2"
            android:layout_marginBottom="30dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearclear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="clear"
                android:visibility="gone"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/loadload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:text="Load" />
        </LinearLayout>

    </LinearLayout>
    <!-- Notice -->

    <!-- 닫기 버튼 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">


        <Button
            android:id="@+id/buttonclose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cancel"
            android:background="@color/titlebg"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Save"
            android:background="@color/titlebg"
            android:textSize="15sp"/>

    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>