<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gridview_selector"
    android:padding="1px"
    android:paddingBottom="3dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_item_gridview"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_item2_gridview"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:background="@drawable/corner_red"
        android:layout_marginBottom="3dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_item3_gridview"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@drawable/corner_green"
        android:textColor="#000000"
        android:layout_marginBottom="3dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_item4_gridview"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@drawable/corner_blue"
        android:textColor="#000000"
        android:layout_marginBottom="0dp"
        android:textSize="13sp" />

</LinearLayout>
