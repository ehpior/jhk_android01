<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gridview_selector"
    android:orientation="vertical"
    >


    <Space
        android:id="@+id/space0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/space0"
        app:layout_constraintHeight_percent="0.225"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weather"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/weather_1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_item_gridview"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|top"
            android:textColor="#000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="9sp"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:text="+3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dot_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:src="@drawable/dot_blue"/>

                <ImageView
                    android:id="@+id/dot_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:src="@drawable/dot_green" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Space
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        />

    <TextView
        android:id="@+id/tv_item2_gridview"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="@drawable/corner_red"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/space1"
        app:layout_constraintHeight_percent="0.225"
        />

    <Space
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintTop_toBottomOf="@id/tv_item2_gridview"
        />

    <TextView
        android:id="@+id/tv_item3_gridview"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="@drawable/corner_green"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/space2"
        app:layout_constraintHeight_percent="0.225"
        />

    <Space
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintTop_toBottomOf="@id/tv_item3_gridview"
        />

    <TextView
        android:id="@+id/tv_item4_gridview"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="@drawable/corner_blue"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/space3"
        app:layout_constraintHeight_percent="0.225"
        />
    <Space
        android:id="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintTop_toBottomOf="@+id/tv_item4_gridview"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>
