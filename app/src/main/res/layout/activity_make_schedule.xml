<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Notice -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/titlebg"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonclose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/titlebg"
            android:scaleType="fitXY"
            android:src="@drawable/icon_cancel"
            android:padding="10dp"
            />
        <ImageButton
            android:id="@+id/buttondelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/titlebg"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_delete"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="New Schedule"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/buttontmp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/titlebg"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_delete"
            android:padding="10dp"
            android:visibility="invisible"
            />

        <ImageButton
            android:id="@+id/buttonSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/titlebg"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:src="@drawable/icon_save"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/black_all"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            >

            <EditText
                android:id="@+id/schedule_et_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Title"
                android:textSize="27dp"
                android:paddingLeft="20dp"
                android:minLines="2"
                />
            <LinearLayout
                android:id="@+id/prac_lay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/black_all"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <View
                    android:id="@+id/prac_bt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:text="Color Select"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icon_location" />

                <EditText
                    android:id="@+id/schedule_et_location"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@android:color/transparent"
                    android:paddingLeft="8dp"
                    android:ems="10"
                    android:hint="Location"
                    android:minLines="2"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icon_date" />

                <EditText
                    android:id="@+id/schedule_et_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@android:color/transparent"
                    android:paddingLeft="8dp"
                    android:ems="10"
                    android:minLines="2"
                    android:hint="Date"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icon_time" />

                <EditText
                    android:id="@+id/schedule_et_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@android:color/transparent"
                    android:paddingLeft="8dp"
                    android:ems="10"
                    android:minLines="2"
                    android:hint="Time"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_marginBottom="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    app:srcCompat="@drawable/icon_memo" />

                <EditText
                    android:id="@+id/schedule_et_memo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@android:color/transparent"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:ems="10"
                    android:minLines="2"
                    android:hint="Memo"
                    android:gravity="top|left"
                    android:inputType="textPersonName" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!-- Notice -->

    <!-- 닫기 버튼 -->

    <!--// 닫기 버튼 -->
</LinearLayout>